# Ignore environment variables
.env

# Ignore node_modules in root, frontend, and backend
node_modules/
frontend/node_modules/
backend/node_modules/

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore build output (e.g., if using Vite, React, etc.)
frontend/dist/
frontend/build/
backend/dist/
backend/build/

# Ignore coverage reports (e.g., from testing)
coverage/
frontend/coverage/
backend/coverage/

# Ignore IDE/editor settings
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Ignore local environment override files
.env.local
.env.development.local
.env.test.local
.env.production.local

# Optional: ignore docker volume data (if any)
docker-volume-data/
